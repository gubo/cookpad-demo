<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/homesidenavbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_width="wrap_content" android:layout_height="wrap_content">
    </ImageView>

    <TextView
        android:text="@string/app_name"
        android:layout_marginTop="10dp" android:textStyle="bold"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    </TextView>

</LinearLayout>
